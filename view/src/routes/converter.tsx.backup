            };
        }
      };

      const frameworkContent = getFrameworkContent();

      const mockResult: ConversionResult = {
        success: true,
        html: frameworkContent.html,
        css: frameworkContent.css,
        components: [
          { id: 'comp-0', type: 'div', name: 'Background', position: { left: 50, top: 50 } },
